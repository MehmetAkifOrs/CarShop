@model CarShop.Model.PageContent

@{
    ViewBag.Title = "İçerikleri Düzenle";
}

<h2>Ürün Düzenle</h2>
<script src="https://cdn.ckeditor.com/4.11.2/standard/ckeditor.js"></script>

@using (Html.BeginForm("Edit", "PageContent", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Projeler</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryPageHeader, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryPageHeader, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryPageHeader, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryPageDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.CategoryPageDescription, new { @class = "form-control ckeditor" })
                @Html.ValidationMessageFor(model => model.CategoryPageDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Upload" class="control-label col-md-2">
                Anasayfa Fotoğrafı
            </label>

            <input type="file" name="Upload" />
        </div>
    </div>


    @*<div class="form-group">
            @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Photo)
                @if (!string.IsNullOrEmpty(Model.Photo))
                {
                    <img src="@(ViewBag.AssetsUrl)@Model.Photo" style="width:300px;" /><br />
                }
                <input type="file" name="upload" />
                @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
            </div>
        </div>*@




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
        </div>
    </div>
    
}

<div>
    @Html.ActionLink("Geriye Dön", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
