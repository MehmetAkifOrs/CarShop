@model CarShop.Model.Product
@{
    ViewBag.Title = "Index";

}

<link rel="stylesheet" type="text/css" href="~/styles/product.css">
<link rel="stylesheet" type="text/css" href="~/styles/product_responsive.css">



<div class="home">
    <div class="home_container">
        <div class="home_background" style="background-image:url(/images/categories.jpg)"></div>
        <div class="home_content_container">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="home_content">
                            <div class="home_title"><span></span></div>
                            <div class="home_text"><p></p></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Product Details -->

<div class="product_details">

    <div class="container">
        <div class="row details_row">



            <!-- Product Image -->
            <div class="col-lg-6">
                <div class="details_image">
                    <div class="details_image_large"><img src="@(ViewBag.AssetsUrl)@Model.Photos.FirstOrDefault().Name" alt=""></div>
                    <div class="details_image_thumbnails d-flex flex-row align-items-start justify-content-between">

                        <div class="details_image_thumbnail active" data-image="@(ViewBag.AssetsUrl)@Model.Photos.FirstOrDefault().Name"><img src="@(ViewBag.AssetsUrl)@Model.Photos.FirstOrDefault().Name" alt=""></div>
                        @foreach (var item in Model.Photos)
                            {
                                <div class="details_image_thumbnail" data-image="@(ViewBag.AssetsUrl)@item.Name"><img src="@(ViewBag.AssetsUrl)@item.Name" alt=""></div>
                            }


                    </div>
                </div>
            </div>

            <!-- Product Content -->
            <div class="col-lg-6">
                <div class="details_content">
                    <div class="details_name">@Model.Name</div>
                    <div class="details_name">@Model.Price TL</div>

                    <!-- In Stock -->
                    <div class="in_stock_container">
                        <div class="availability">Availability:</div>
                        <span>In Stock</span>
                    </div>
                    <div class="details_text">
                        <p>@Model.Description</p>
                    </div>

                    <!-- Product Quantity -->
                    <div class="product_quantity_container">
